<h3 class="title is-3">New post</h3>

<%= form_with model: @post do |form| %>
  <div class="field">
    <%= form.label :title, class: "label" %>
    <%= form.text_field :title, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :content, class: "label" %>
    <div class="control">
    <%= form.text_area :content, class: "textarea" %>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit %>
    </div>
  </div>
<% end %>