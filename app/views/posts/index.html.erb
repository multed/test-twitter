<% @posts.each do |post| %>
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <p class="title is-4"><%= link_to post.title, post %></p>
        </div>
      </div>
      <div class="content">
        <%= post.content %>
        <br>
        <time datetime="<%= post.created_at.strftime("%Y-%m-%d") %>"><%= post.created_at.strftime("%H:%M, %d.%m.%Y") %></time>
      </div>
    </div>
  </div>
<% end %>
